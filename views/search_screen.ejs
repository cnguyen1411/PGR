<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Search Screen</title>
</head>
<body>
  <header>
    <%- include('navbar', { page: 'search_screen' }) %>
  </header>
  <main>
    <div class="container">
      <h1>Search Screen</h1>
      <form action="/device/search_screen" method="POST" class="form-container">
        <label for="searchType">Search By:</label>
        <select id="searchType" name="searchType" required>
          <option value="trackingNumber">Tracking Number</option>
          <option value="customerName">Customer Name</option>
        </select><br><br>
        <label for="searchValue">Search Value:</label>
        <input type="text" id="searchValue" name="searchValue" required><br><br>
        <button type="submit">Search</button>
      </form>
    </div>
  </main>
